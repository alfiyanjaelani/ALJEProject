@{
    ViewData["Title"] = "Options Page";
}
@model IEnumerable<Option>

<h2>Options List</h2>

<!-- Create Button above the table -->
<div class="mb-3">
    <button class="btn btn-primary btn-create-option" data-url="@Url.Action("Create", "Option")">Create New Option</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>OptionsID</th>
            <th>Field Name</th>
            <th>Field Value</th>
            <th>Long Name</th>
            <th>Short Name</th>
            <th>Created Date</th>
            <th>Created By</th>
            <th>Updated Date</th>
            <th>Updated By</th>
            <th>Active</th>
            <th>Actions</th> <!-- Actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var option in Model)
        {
            <tr id="optionRow-@option.OptionsID">
                <td>@option.OptionsID</td>
                <td>@option.FieldName</td>
                <td>@option.FieldValue</td>
                <td>@option.LongName</td>
                <td>@option.ShortName</td>
                <td>@option.CreatedDate</td>
                <td>@option.CreatedBy</td>
                <td>@option.UpdatedDate</td>
                <td>@option.UpdatedBy</td>
                <td>@(option.Active == true ? "Yes" : "No")</td>
                <td>
                    <!-- Edit Button -->
                    <button class="btn btn-warning btn-edit-option" data-id="@option.OptionsID">Edit</button>

                    <!-- Delete Button with confirmation -->
                    <button class="btn btn-danger btn-delete-option" data-id="@option.OptionsID">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Option Modal Container -->
<div id="createOptionModalContainer"></div>

<!-- Edit Option Modal Container -->
<div id="editOptionModalContainer"></div>

<!-- Notification Modal for Success/Error Messages -->
<div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="notificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="notificationModalLabel">Notification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="notificationMessage">
                <!-- Message will be injected here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="refreshPage()">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Create Option
            $(document).on("click", ".btn-create-option", function () {
                var url = $(this).data("url");
                $.get(url, function (data) {
                    $("#createOptionModalContainer").html(data);
                    $("#createOptionModal").modal("show");
                });
            });

            $(document).on('submit', '#createOptionForm', function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: $(this).attr('action'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#notificationMessage').text("Option created successfully!");
                            $('#notificationModal').modal('show');
                            $('#createOptionModal').modal('hide');
                        } else {
                            $('#notificationMessage').html(response.errors.join("<br>"));
                            $('#notificationModal').modal('show');
                        }
                    },
                    error: function () {
                        $('#notificationMessage').text("An error occurred while creating the option.");
                        $('#notificationModal').modal('show');
                    }
                });
            });

            // Edit Option
            $(document).on("click", ".btn-edit-option", function () {
                var optionId = $(this).data("id");
                $.get('@Url.Action("Edit", "Option")', { id: optionId }, function (data) {
                    $("#editOptionModalContainer").html(data);
                    $("#editOptionModal").modal("show");
                });
            });

            $(document).on('submit', '#editOptionForm', function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: $(this).attr('action'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#notificationMessage').text("Option updated successfully!");
                            $('#notificationModal').modal('show');
                            $('#editOptionModal').modal('hide');
                        } else {
                            $('#notificationMessage').html(response.errors.join("<br>"));
                            $('#notificationModal').modal('show');
                        }
                    },
                    error: function () {
                        $('#notificationMessage').text("An error occurred while updating the option.");
                        $('#notificationModal').modal('show');
                    }
                });
            });

            // Delete Option
            $(document).on("click", ".btn-delete-option", function () {
                var optionId = $(this).data("id");
                var confirmDelete = confirm("Are you sure you want to delete this option?");
                if (confirmDelete) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Option")',
                        data: { id: optionId },
                        success: function (response) {
                            if (response.success) {
                                $('#notificationMessage').text("Option deleted successfully!");
                                $('#notificationModal').modal('show');
                                $('#optionRow-' + optionId).remove();
                            } else {
                                $('#notificationMessage').text("Failed to delete option: " + response.errors.join(", "));
                                $('#notificationModal').modal('show');
                            }
                        },
                        error: function () {
                            $('#notificationMessage').text("An error occurred while deleting the option.");
                            $('#notificationModal').modal('show');
                        }
                    });
                }
            });
        });

        function refreshPage() {
            location.reload();
        }
    </script>
}
